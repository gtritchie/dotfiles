#!/usr/bin/env bash

set -e

PREV_WD=$(pwd)

if [ -z "$RSTUDIO_PRO_BASE" ]; then
    RSTUDIO_PRO_BASE=~/rstudio-pro
fi
echo "Using ${RSTUDIO_PRO_BASE}"
cd "${RSTUDIO_PRO_BASE}/package/linux"

MAKEFLAGS=-j5 CMAKE_BUILD_TYPE=Debug CMAKE_GENERATOR=Ninja ${RSTUDIO_PRO_BASE}/vagrant/iterate-pro.sh \
    --www-local-path="${RSTUDIO_PRO_BASE}/src/gwt/www"

#${RSTUDIO_PRO_BASE}/vagrant/iterate-pro.sh

cd "$PREV_WD"
